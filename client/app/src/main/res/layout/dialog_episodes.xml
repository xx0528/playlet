<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg_shape_dialog"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="12dp"
            android:src="@mipmap/icon_episodes"/>
        <TextView
            android:id="@+id/dialog_video_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="21dp"
            android:textColor="#000"
            android:text="神豪败家子"/>
        <ImageView
            android:id="@+id/dialog_episodes_close"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:src="@mipmap/ic_more_dow"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#414c56"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/episodes_dialog_tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tabIndicatorColor="#333333"
                app:tabMode="scrollable"
                app:tabGravity="fill"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorHeight="3dp"
                app:tabIndicatorFullWidth="false"
                app:tabTextColor="#999999"
                app:tabSelectedTextColor="#ce6872"
                app:tabTextAppearance="@style/tabStyle"/>

        </RelativeLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/dialog_episodes_pager"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>



</LinearLayout>