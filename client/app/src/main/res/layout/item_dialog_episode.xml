<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_shape_dialog_item"
    android:id="@+id/dialog_item_root_content"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/park_item_episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="1"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/episodes_lock_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/icon_lock"
        android:padding="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_shape_dialog_item_lock"/>

</RelativeLayout>