<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_shape_dialog_item"
    android:id="@+id/dialog_item_root_content"
    android:layout_margin="5dp"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/park_item_episodes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:text="1"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/episodes_lock_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:src="@mipmap/icon_lock"
        android:padding="3dp"
        android:background="@drawable/bg_shape_dialog_item_lock"/>

</FrameLayout>