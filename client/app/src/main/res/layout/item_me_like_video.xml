<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dp"
    android:padding="5dp"
    android:background="@drawable/bg_shape_local_like"
    android:layout_marginRight="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_me_like_imageview"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="@color/windowBackground"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/default_project_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_me_like_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack333"
                android:ellipsize="end"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="11sp"
                tools:text="我的霸道姐姐逆了天" />

            <TextView
                android:id="@+id/item_me_like_video_episodes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack666"
                android:textSize="9sp"
                tools:text="看到第90集" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>


